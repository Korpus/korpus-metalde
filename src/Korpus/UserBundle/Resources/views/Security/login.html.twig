{% extends "KorpusUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="row">
    <div class="col-lg-4 col-lg-offset-4">
        {% if error %}
            <div class="alert alert-danger">{{ error|trans }}</div>
        {% endif %}

        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Korpus Login</h3>
            </div>
            <div class="panel-body">
                <form action="{{ path("fos_user_security_check") }}" method="post" role="form">            
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>

                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input class="form-control" type="password" id="password" name="_password" required="required" />
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>

                    <input class="btn btn-info btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </form>
            </div>
        </div>
        <div class="centered">
            <a href="{{ path('korpus_main_page_impressum') }}">Impressum</a>
        </div>
    </div>
</div>


{% endblock fos_user_content %}
