{% extends "::base_bs3.html.twig" %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/pages/korpusconsole/css/app.css') }}" />
{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
<script src="{{ asset('assets/pages/korpusconsole/js/app.js') }}"></script>
{% endblock %}

{% block body %}

<span class="hidden" id="current-page">{% block currentpage %}{% endblock %}</span>
<span class="hidden" id="current-subpage">{% block currentsubpage %}{% endblock %}</span>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="{{ path('korpus_console_homepage') }}">KorpusConsole</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
            <li class="nl-dashboard nav-link"><a href="{{ path('korpus_console_dashboard') }}">Dashboard</a></li>
            <li class="dropdown nl-cms nav-link">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">CMS <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('korpus_console_cms_news') }}">News</a></li>
                    <li><a href="{{ path('korpus_console_cms_concert') }}">Konzerte</a></li>
                    <li><a href="{{ path('korpus_console_cms_member') }}">Mitglieder</a></li>
                    <li><a href="{{ path('korpus_console_cms_media') }}">Media</a></li>
                    <li><a href="{{ path('korpus_console_cms_files') }}">Dateien</a></li>
                </ul>
            </li>
        </ul>
            
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> {{app.user.username}} <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('fos_user_profile_show') }}">Profil</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                </ul>
            </li>
        </ul>
    </div><!-- /.navbar-collapse -->
</nav>

<div class="container content-area">
    <div class="row">
        <div class="col-lg-12">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>

{% endblock %}