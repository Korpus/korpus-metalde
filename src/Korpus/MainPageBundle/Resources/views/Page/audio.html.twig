{% extends 'KorpusMainPageBundle::layout.html.twig' %}

{% block currentpage %}media{% endblock %}
{% block currentsubpage %}audio{% endblock %}

{% block title %}Korpus &middot; Media &middot; Audio{% endblock %}

{% block content %}

{% include 'KorpusMainPageBundle::small-nav-media.html.twig' %}

<br>

<div id="box-soundcloud">
    <a class="btn btn-default" id="btn-open-soundcloud" href="#player"><img src="{{ asset('assets/img/soundcloud.png') }}"> <span style="font-size: 10px; margin-left: 5px;">Player Ã¶ffnen</span></a>
    <div style="display: none;" id="area-soundcloud">
        <br>
        <iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/4347800&amp;auto_play=false&amp;hide_related=false&amp;visual=true"></iframe>
    </div>
</div>

<br>

<div class="row">
    <div class="col-lg-12">
        {% for record in records %}
            <div class="row">
                <div class="col-lg-6">
                    <br>
                    
                    {% if record.cover == null %}
                        {% set coverThumb = 'http://placehold.it/400x400' %}
                    {% else %}
                        {% set coverThumb = path('korpus_file_server_images_object', {folder: record.cover.folder, slug: record.cover.slug, extension: record.cover.type.extension}) %}
                    {% endif %}
                    <img src="{{coverThumb}}" class="img-responsive img-thumbnail" style="max-width: 200px;">
                </div>  
                <div class="col-lg-6">
                    <h2>{{record.title}}</h2>
                    <h5>{{record.publishDate|date('Y')}}</h5>
                    
                    <ol>
                    {% for track in record.tracks %}
                        <li>{{track.title}}</li>
                    {% endfor %}
                    </ol>
                    
                </div>
            </div>
            <br>
        {% endfor %}
    </div>
</div>

{% endblock %}