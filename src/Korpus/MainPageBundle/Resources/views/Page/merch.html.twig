{% for group in groups %}
<h2>{{group.title}}</h2>
<div class="row">
    {% for article in group.articles %}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{ path('korpus_file_server_images_object', {folder: article.photo.folder, slug: article.photo.slug, extension: article.photo.type.extension}) }}" alt="">
            <div class="caption">
                <h3>{{article.title}}</h3>
                <p><span class="label label-success">ab {{article.price|number_format(2, ',', '.')}}&euro;</span></p>
                <p><a href="{{ path('korpus_main_page_merch_article', {slug: article.slug}) }}" class="btn btn-primary" role="button">Details</a></p>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endfor %}

{% endblock %}